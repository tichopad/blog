---
import BaseLayout from "../layouts/BaseLayout.astro";
import Ornament from "../components/Ornament.astro";

// Dev-only guard: return 404 in production
if (!import.meta.env.DEV) {
  return new Response(null, { status: 404 });
}

// Color variable data structure
interface ColorVariable {
  name: string;
  cssVar: string;
  hex: string;
  description: string;
}

interface ColorFamily {
  family: string;
  colors: ColorVariable[];
}

// Typography variable data structures
interface FontFamilyVariable {
  name: string;
  cssVar: string;
  value: string;
  description: string;
}

interface FontSizeVariable {
  name: string;
  cssVar: string;
  rem: string;
  px: string;
}

interface LineHeightVariable {
  name: string;
  cssVar: string;
  value: string;
}

interface LetterSpacingVariable {
  name: string;
  cssVar: string;
  value: string;
}

interface BorderRadiusVariable {
  name: string;
  cssVar: string;
  rem: string;
  px: string;
}

interface ShadowVariable {
  name: string;
  cssVar: string;
  value: string;
}

