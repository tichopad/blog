---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  pageTitle: string;
  description: string;
}

const { pageTitle, description } = Astro.props;
---

<!--
A base layout for most pages.
-->
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta content={pageTitle} name="title" />
    <meta content={description} name="description" />
    <slot name="metas" />
    <title>{pageTitle}</title>
    <slot name="preloads" />
    <!-- Fonts -->
    <link
      as="font"
      crossorigin
      href="/fonts/playfair-display-variable.ttf"
      rel="preload"
      type="font/truetype"
    />
    <link
      as="font"
      crossorigin
      href="/fonts/playfair-display-italic-variable.ttf"
      rel="preload"
      type="font/truetype"
    />
    <link
      as="font"
      crossorigin
      href="/fonts/eb-garamond-variable.ttf"
      rel="preload"
      type="font/truetype"
    />
    <link
      as="font"
      crossorigin
      href="/fonts/eb-garamond-italic-variable.ttf"
      rel="preload"
      type="font/truetype"
    />
  </head>
  <body>
    <div class="page-container">
      <Header />
      <main class="main-content">
        <h1>{pageTitle}</h1>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style>
  .page-container {
    max-width: 80rem; /* 1280px */
    margin: 0 auto;
    padding: 0 5rem; /* 80px */
  }

  @media (max-width: 1024px) {
    .page-container {
      padding: 0 3rem; /* 48px on tablet */
    }
  }

  @media (max-width: 768px) {
    .page-container {
      padding: 0 1.5rem; /* 24px on mobile */
    }
  }

  .main-content {
    padding-top: 2rem;
    padding-bottom: 4rem;
  }

  .main-content h1 {
    margin-bottom: 2rem;
  }
</style>
