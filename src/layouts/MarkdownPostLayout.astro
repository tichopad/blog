---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<!--
A layout for Markdown posts.
-->
<BaseLayout pageTitle={frontmatter.title} description={frontmatter.description}>
  <nav class="post-nav">
    <a href="/blog/" class="back-link">‚Üê Back to Posts</a>
  </nav>

  <article class="blog-post">
    <header class="post-header">
      <time class="post-date" datetime={frontmatter.pubDate.toISOString()}>
        {
          frontmatter.pubDate.toLocaleDateString("en-US", {
            day: "numeric",
            month: "long",
            year: "numeric",
          })
        }
      </time>
      <p class="post-description">{frontmatter.description}</p>
      <div class="post-meta">
        <span class="post-author">By {frontmatter.author}</span>
        {
          frontmatter.tags && frontmatter.tags.length > 0 && (
            <div class="post-tags">
              {frontmatter.tags.map((tag: string) => (
                <a href={`/tags/${tag}/`} class="post-tag">
                  {tag}
                </a>
              ))}
            </div>
          )
        }
      </div>
    </header>

    <div class="post-content prose">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .post-nav {
    margin-bottom: 2rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-family-display);
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-brown-light);
    text-decoration: none;
    transition: all 200ms ease;
    letter-spacing: var(--letter-spacing-wide);
  }

  .back-link:hover {
    color: var(--color-sage-dark);
    transform: translateX(-0.25rem);
  }

  .blog-post {
    max-width: 48rem;
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-cream-darker);
  }

  .post-date {
    display: block;
    font-size: var(--font-size-sm);
    color: var(--color-brown-lighter);
    font-weight: 500;
    letter-spacing: var(--letter-spacing-wide);
    margin-bottom: 1rem;
  }

  .post-description {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-snug);
    color: var(--color-brown-light);
    font-style: italic;
    margin-bottom: 1rem;
  }

  .post-meta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    font-size: var(--font-size-sm);
    color: var(--color-brown-lighter);
  }

  .post-author {
    font-weight: 500;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .post-tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: var(--color-cream-darker);
    color: var(--color-brown);
    text-decoration: none;
    border-radius: var(--radius-md);
    font-size: var(--font-size-xs);
    font-weight: 600;
    letter-spacing: var(--letter-spacing-wide);
    transition: all 200ms ease;
  }

  .post-tag:hover {
    background-color: var(--color-sage-light);
    color: var(--color-brown);
    transform: translateY(-1px);
  }

  .post-content {
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
  }

  /* Prose styling for markdown content */
  .prose :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose :global(h2) {
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .prose :global(h3) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(strong) {
    font-weight: 700;
    color: var(--color-brown);
  }

  .prose :global(em) {
    font-style: italic;
    color: var(--color-brown-light);
  }

  .prose :global(img) {
    margin: 2rem 0;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    max-width: 100%;
    height: auto;
  }

  .prose :global(code) {
    font-family: ui-monospace, monospace;
    font-size: 0.9em;
  }

  .prose :global(pre) {
    margin: 2rem 0;
    padding: 1.5rem;
    background-color: var(--color-cream-dark);
    border-radius: var(--radius-md);
    overflow-x: auto;
  }
</style>
